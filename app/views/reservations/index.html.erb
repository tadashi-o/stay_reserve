<section class="container">
  <h2>予約済み一覧</h2>
  <table class="table is-striped reservation_table list_table">
    <thead>
      <tr>
        <th>画像</th>
        <th>施設名</th>
        <th>紹介文</th>
        <th>合計料金</th>
        <th>チェックイン</th>
        <th>チェックアウト</th>
        <th>予約確定日時</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
    <% @reservation.each do |reservation|%>
      <tr>
        <td><%= image_tag reservation.room.facility_img.url, size: '100x120' %></td>
        <td><%= link_to reservation.room.facility_name, room_path(reservation.room_id)  %></td>
        <td><%= reservation.room.facility_detail %></td>
        <td>¥<%= reservation.total_price.to_s(:delimited) %></td>
        <td><%= reservation.check_in.strftime('%Y/%m/%d') %></td>
        <td><%= reservation.check_out.strftime('%Y/%m/%d') %></td>
        <td><%= reservation.created_at.strftime('%Y/%m/%d %H:%M') %></td>
        <td>
          <div class="navbar-item has-dropdown is-hoverable" style="margin-right: 100px;">
            <a class="navbar-item"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-three-dots-vertical" viewBox="0 0 16 16">
            <path d="M9.5 13a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0zm0-5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0zm0-5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0z"/>
            </svg></a>
            <div class="navbar-dropdown">
              <%= link_to  "再予約する", [:edit, reservation], class: "navbar-item" %>
              <%= link_to "削除", reservation, method: :delete, data: { confirm: "本当に削除しますか？" }, class: "navbar-item" %>
            </div>
          </div>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</section>