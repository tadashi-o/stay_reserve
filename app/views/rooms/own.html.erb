<section class="container">
  <h2>登録施設情報一覧</h2>
  <table class="table is-striped">
    <thead>
      <tr>
        <th>画像</th>
        <th>施設名</th>
        <th>紹介文</th>
        <th>料金</th>
        <th>作成日</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td><%= image_tag room.facility_img.url, size: '100x120' %></td>
        <td><%= link_to room.facility_name, room %></td>
        <td><%= room.facility_detail %></td>
        <td><%= room.price %></td>
        <td><%= room.created_at.strftime('%Y/%m/%d') %></td>
        <td>
          <div class="navbar-item has-dropdown is-hoverable" style="margin-right: 100px;">
            <a class="navbar-item"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-three-dots-vertical" viewBox="0 0 16 16">
            <path d="M9.5 13a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0zm0-5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0zm0-5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0z"/>
            </svg></a>
            <div class="navbar-dropdown">
              <%= link_to  "編集", [:edit, room], class: "navbar-item" %>
              <%= link_to  "施設の削除", "/reservations", class: "navbar-item" %>
            </div>
          </div>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</section>