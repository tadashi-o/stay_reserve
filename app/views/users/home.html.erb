<div class="FirstView">
  <section class="container">
    <h2 class="FirstView_title">
      Stay Reserveで<br>
      まだ体験したことのない<br>
      旅をしよう
    </h2>
    <div class="FirstViewSearch">
      <%= search_form_for @q, url: search_rooms_path do |f| %>
        <%= f.search_field :address_cont, value: "", class: "input", placeholder: "エリア名を入力「東京」など" %>
        <%= f.submit "探す", class: "button is-danger is-light btn_seek", data:{disable_with: "探す"} %>
      <% end %>
    </div>
  </section>
</div>
