<section class="hero is-dark is-fullheight">
  <div class="hero-body">
    <div class="container">
      <div class="columns is-centered">
        <div class="column is-6-table is-6-desktop is-6-widescreen">
          <div class="box">
            
            <div class="field has-text-centered">
              <strong>プロフィール情報編集</strong>
            </div>
            <%= form_with model:@user do |f| %>
            <div class="field">
                <%= f.label :avatar ,"アイコン画像" %>
                <%= image_tag current_user.avatar.url %>
            <%= f.file_field :avatar,class:"img"%>
              </div>
              <div class="field">
                <%= f.label :氏名, class: "label" %>
                <%= f.text_field :full_name, autofocus: true, autocomplete: "full_name", class: "input" %>
              </div>
              <div class="field">
                <%= f.label :自己紹介, class: "label" %>
                <%= f.text_field :introduction, autofocus: true, autocomplete: "full_name", class: "input" %>
              </div>
              <div class="field">
                <%= f.submit "更新する", class: "button is-danger is-fullwidth account_btn" %>
              </div>
            <% end %>
            <%= link_to "戻る", :back, class: "button is-fullwidth m-t-10 account_btn" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>